<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DriverActivity">

    <fragment android:name="com.google.android.gms.maps.SupportMapFragment"
        android:id="@+id/fragment_driver_maps"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.ebanx.swipebtn.SwipeButton
        android:id="@+id/startRoute"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        app:button_background="@drawable/shape_button_squared"
        app:button_bottom_padding="18dp"
        app:button_image_disabled="@drawable/ic_airport_shuttle_black_24dp"
        app:button_image_enabled="@drawable/ic_check_black_24dp"
        app:button_left_padding="18dp"
        app:button_right_padding="18dp"
        app:button_top_padding="18dp"
        app:button_trail_enabled="true"
        app:has_activate_state="true"
        app:initial_state="disabled"
        app:inner_text="START ROUTE"
        app:inner_text_background="@drawable/shape_squared"
        app:inner_text_bottom_padding="18dp"
        app:inner_text_color="@android:color/white"
        app:inner_text_size="16sp"
        app:inner_text_top_padding="18dp" />
</RelativeLayout>